CREATE DATABASE bank;

SHOW DATABASES;

USE bank;

SHOW TABLES;

CREATE TABLE users (
    id int,
    accountId varchar(50),
    pin int
);

CREATE TABLE bilances (
    userId int,
    bilance FLOAT
);


INSERT INTO users (id, accountId, pin) VALUES (1, 123456789, 8888);
SELECT id, accoundId, pin FROM users;

CRUD (Creat, Read, Update, Delete)
SELECT * FROM bilances;
INSERT INTO bilances (userId, bilance) VALUES (1, 500);
UPDATE bilances set bilance = 10000 where userId = 1;
DELETE FROM bilances where userId = 1;


